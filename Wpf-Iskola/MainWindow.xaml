<Window x:Class="Wpf_Iskola.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Iskola"
        mc:Ignorable="d"
        Title="Iskola GUI" Height="444" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,19" Height="444" UseLayoutRounding="False">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="Tanulók" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="330" Width="230" Margin="35,10,0,0" Grid.ColumnSpan="2"/>
        <Button x:Name="Törlés" Content="Törlés" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Width="122" FontSize="14" Height="23" Click="Törlés_Click"/>
        <Button x:Name="Mentés" Content="Állomány mentése" HorizontalAlignment="Left" Margin="151,362,0,0" VerticalAlignment="Top" Width="122" FontSize="14" Height="23" Grid.ColumnSpan="2" Click="Mentés_Click"/>

    </Grid>
</Window>
